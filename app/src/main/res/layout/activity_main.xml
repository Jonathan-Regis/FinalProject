<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/currencyConverterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Converter"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/Trivia_Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Trivia Generator "
 />

    <Button
        android:id="@+id/Aviation_Tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aviation Tracker"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/Bear_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bear Image Generator"
        android:layout_margin="5dp"/>

</LinearLayout>